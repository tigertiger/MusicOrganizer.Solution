<!DOCTYPE html>
<html>
<head>
@{
  Layout = "_Layout";
}
</head>
<body>
<h1>Add a new item to @Model.Descrip</h1>

<form action="/genres/@Model.Id/albums" method="post">
  <input id="genreId" name="genreId" type="hidden" value="@Model.Id">
  <label for="albumTitle">Album Title</label>
  <input id="albumTitle" name="albumTitle" type="text">
  <label for="albumArtist">Album Artist</label>
  <input id="albumArtist" name="albumArtist" type="text">
  <button type='submit'>Add</button>
</form>
</body>
</html>